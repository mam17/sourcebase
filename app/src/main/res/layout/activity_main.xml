<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:paddingTop="?attr/actionBarSize">

    <Button
        android:id="@+id/btnShowReward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show reward"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnShowInter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show inter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShowReward" />

    <include
        android:id="@+id/adBanner"
        layout="@layout/layout_ads_banner" />

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerNative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/adBanner"
        app:layout_constraintTop_toBottomOf="@+id/btnShowInter">

        <include
            android:id="@+id/flNativeContainer"
            layout="@layout/ad_unified" />
    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>