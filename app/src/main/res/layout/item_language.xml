<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:layout_marginVertical="@dimen/size8"
    android:tag="layout/item_language_0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size56"
        android:paddingHorizontal="@dimen/size16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_language"
            android:layout_width="@dimen/size38"
            android:layout_height="@dimen/size24"
            android:src="@drawable/ic_lang_vietnamese"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size10"
            android:text="Vietnamese"
            android:textColor="@color/color_main"
            android:textSize="@dimen/size16"
            app:layout_constraintBottom_toBottomOf="@+id/img_language"
            app:layout_constraintEnd_toStartOf="@+id/sw_language"
            app:layout_constraintStart_toEndOf="@+id/img_language"
            app:layout_constraintTop_toTopOf="@+id/img_language" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/sw_language"
            android:layout_width="@dimen/size30"
            android:layout_height="@dimen/size30"
            android:checked="true"
            android:clickable="false"
            android:theme="@style/SwitchTheme"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title_language"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_title_language" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
